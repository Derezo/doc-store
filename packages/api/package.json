{
  "name": "@doc-store/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "create-admin": "tsx src/cli/create-admin.ts",
    "backfill-search": "tsx src/cli/backfill-search.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --include 'src/**/*.test.ts'",
    "test:integration": "vitest run --include 'tests/**/*.test.ts'"
  },
  "dependencies": {
    "@doc-store/shared": "*",
    "argon2": "^0.41",
    "chokidar": "^4.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "drizzle-orm": "^0.38",
    "express": "^5",
    "express-rate-limit": "^7.5",
    "gray-matter": "^4.0",
    "jose": "^6.0",
    "nodemailer": "^6.9",
    "pg": "^8.13",
    "pino": "^9.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5",
    "@types/node": "^22",
    "@types/nodemailer": "^6",
    "@types/pg": "^8",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "drizzle-kit": "^0.30",
    "pino-pretty": "^13",
    "supertest": "^7.2.2",
    "tsx": "^4",
    "typescript": "^5.7",
    "vitest": "^4.0.18"
  }
}
